I will might never need this, but just curious

function makeCopy(obj) {
    var clone = Object.create(obj.__proto__);
		    Object.getOwnPropertyNames( obj ).forEach( val => {
		    	if( obj[val] != null && typeof ( obj[val] ) == "object"){
		    			clone[val] = makeCopy( obj[val] )
		    	} else{
		           clone[val] = obj[val];
	            }
	        });
   return clone;
}
