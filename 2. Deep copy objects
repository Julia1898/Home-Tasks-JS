function makeCopy(obj) {
    var clone = {};
    for( var i in obj ) {
        if( obj[i] != null &&  typeof ( obj[i] ) == "object" )
            clone[i] = makeCopy( obj[i] );
        else
            clone[i] = obj[i];
    }
    return clone;
}


